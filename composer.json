{
  "description": "Phing tasks dedicated to the synchronization of translations with the Smartling service.",
  "homepage": "https://github.com/aquafadas-com/phing-smartling",
  "name": "aquafadas/phing-smartling",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",

  "authors": [{
    "email": "opensource@aquafadas.com",
    "name": "Aquafadas"
  }],
  "autoload": {
    "psr-4": {"phing\\smartling\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "build",
    "i18n",
    "phing",
    "smartling",
    "task",
    "translation"
  ],
  "require": {
    "php": ">=7.0.0",
    "phing/phing": "^2.14.0",
    "smartling/api-sdk-php": "^1.9.17"
  },
  "require-dev": {
    "codacy/coverage": "^1.0.5",
    "phpdocumentor/phpdocumentor": "^2.9.0",
    "phpmd/phpmd": "^2.4.3",
    "phpunit/phpunit": "^5.5.4"
  },
  "support": {
    "issues": "https://github.com/aquafadas-com/phing-smartling/issues"
  }
}
